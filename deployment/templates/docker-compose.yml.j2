version: "3.7"

services:
  nginx:
    image: umputun/nginx-le:latest
    hostname: nginx
    restart: always
    container_name: nginx

    logging:
      driver: json-file
      options:
          max-size: "10m"
          max-file: "5"

    volumes:
        - ./etc/ssl:/etc/nginx/ssl
        - ./etc/nginx/service.conf:/etc/nginx/service.conf
    ports:
      - "80:80"
      - "443:443"
    networks:
      - frontend

    environment:
      - TZ=America/Chicago
      - LETSENCRYPT=true
      - LE_EMAIL=techops@obada.io
      - LE_FQDN={{ obada_member }}.node.obada.io

  queue:
    image: obada/server-gateway:dev
    container_name: queue
    volumes:
      - ./etc/.env:/app/.env
    restart: always
    command: php artisan queue:work sqs --tries=3
    networks:
      - backend

  app:
    image: obada/server-gateway:dev
    container_name: gateway
    volumes:
      - ./etc/.env:/app/.env
    restart: always
    networks:
      - backend
      - frontend

  zipkin:
    image: openzipkin/zipkin:2.21
    container_name: zipkin
    networks:
      - backend
    ports:
      - 127.0.0.1:9411:9411

  qldb:
    image: obada/qldb:dev
    container_name: qldb
    restart: always
    environment:
      - QLDB_KEY={{ qldb_key }}
      - QLDB_SECRET={{ qldb_secret }}
      - QLDB_REGION={{ qldb_region }}
      - QLDB_DATABASE={{ qldb_database }}
    ports:
      - 127.0.0.1:3000:3000
      - 127.0.0.1:4000:4000
    networks:
      - backend

  db:
    image: mysql:8
    container_name: db
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD={{ db_password }}
      - MYSQL_DATABASE=gateway
    ports:
      - 127.0.0.1:3306:3306
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - backend

networks:
  backend:
  frontend:

volumes:
  db_data: {}
